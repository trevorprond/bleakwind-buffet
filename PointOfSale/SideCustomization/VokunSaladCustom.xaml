<UserControl x:Class="PointOfSale.SideCustomization.VokunSaladCustom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.SideCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="450">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <TextBox DockPanel.Dock ="Top" Text="Customize side" Height="50"></TextBox>
        </DockPanel>


        <CheckBox Grid.Row="1"
              Content="Small" Margin="9" />
        <CheckBox Grid.Row="2"
              Content="Medium" Margin="9" />
        <CheckBox Grid.Row="3"
              Content="Large" Margin="9" />
        <Button Grid.Row="6"
                Content="Done" Margin="9" />
    </Grid>
</UserControl>
