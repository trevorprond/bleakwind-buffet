<UserControl x:Class="PointOfSale.DrinkList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="450">



    <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>



        <Button Grid.Row="0"
                Content="Sailor Soda" Margin="40" ClickMode="Release" Click="SailorSoda_Click"/>
        <Button Grid.Row="1"
              Content="Markarth Milk" Margin="40" ClickMode="Release" Click="MarkarthMilk_Click" />
        <Button Grid.Row="2"
              Content="Aretino Apple Juice" Margin="40" ClickMode="Release"  Click="AretinoAppleJuice_Click" />
        <Button Grid.Row="3"
              Content="Candlehearth Coffe" Margin="40" ClickMode="Release" Click="CandlehearthCoffe_Click" />
        <Button Grid.Row="4"
                Content="Warrior Water" Margin="40" ClickMode="Release" Click="WarriorWater"/>
        </Grid>
    
</UserControl>
