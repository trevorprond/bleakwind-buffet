<UserControl x:Class="PointOfSale.FinishOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="2" BorderBrush="Black">
        <StackPanel Margin="20,20,20,20">
            <TextBlock FontSize="30" FontWeight="Bold" Text="Payment Method."/>
            <StackPanel Margin="0,10,0,0">
                <Button x:Name="PayByCard" Content="Credit/Debit (Card Payment)" FontSize="20" FontWeight="Medium" Height="40" Margin="7" ClickMode="Release" Click="PayByCard_Click"/>
                <Button Content="Cash" FontSize="20" FontWeight="Medium" Height="40" Margin="7" ClickMode="Release" Click="Button_Click"/>
                <Button Click="OnSwitchScreen" Content="Return To Order" FontSize="20" FontWeight="Medium" Height="50" Margin="0,50,0,0" ClickMode="Release"/>
                <Button Click="OnSwitchScreen" Content="Continue Payment" FontSize="20" FontWeight="Medium" Height="50" Margin="0,5,0,0" ClickMode="Release"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
